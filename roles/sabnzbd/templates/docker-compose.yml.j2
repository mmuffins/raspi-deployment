---
version: "3.8"

networks:
  reverse-proxy:
    external: true

services:
  sabnzb:
    image: lscr.io/linuxserver/sabnzbd:amd64-3.7.2
    container_name: {{ app_name }}
    restart: unless-stopped
    environment:
      - PUID=${PUID}
      - PGID=${PGID}
      - TZ=Europe/Vienna
    volumes:
      - ${SETTINGS_DIRECTORY}/{{ app_name }}:/config
      - ${DATA_DIRECTORY}/usenet:/data/usenet:rw
    networks:
      - ${TRAEFIC_NETWORK}
    ports:
      - 8089:8080
    labels:
      - traefik.enable=true
      - traefik.docker.network=${TRAEFIC_NETWORK}
      - traefik.http.routers.{{ app_name }}.rule=Host(`{{ app_name }}.${TRAEFIC_DOMAIN}`)
      - traefik.http.routers.{{ app_name }}.entrypoints=${TRAEFIC_ENDPOINT}
      - traefik.http.services.{{ app_name }}.loadbalancer.server.port=8080
      - net.unraid.docker.icon=${SABNZBD_ICON_URL}
      - net.unraid.docker.webui=http://{{ app_name }}.{{ domain }}